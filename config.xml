<?xml version='1.0' encoding='utf-8'?>
<widget id="com.georgiesantiago.thebardoor" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>The Bar Door</name>
    <description>
        A psycho horror topdown RPG
    </description>
    <author email="author@author.be" href="http://to.author.com">
        GeorgieSantiago
    </author>
    <content src="src/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <dict>
        <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
        <true/>
    </dict>
</widget>
